{{#partial "titulo-y-descripcion"}}
    <title>Donar Vianda</title>
    <meta name="description" content="Donar Vianda">
{{/partial}}

{{#partial "js-extra"}}
    <script type="text/javascript" src="/js/popUp.js"></script>
    <script type="text/javascript" src="/js/donarViandas.js"></script>
{{/partial}}

{{#partial "titulo-h1"}}
    <h1 class="titulo" style="color: black !important;">Donar Vianda</h1>
{{/partial}}

{{#partial "contenido"}}
    <main>
        <form action="/colaboraciones/donarViandas" method="post">
            <section class="flexContainer">
                <div class="divContainer" style="width:100%">
                    <input type="text" name="descripcion" class="input" required placeholder="Vianda Donada" style="width:100%">
                </div>
            </section>

            <section class="flexContainer">
                <div class="divContainer" style="width:100%; position: relative;">
                    <label style="color: gray !important; font-size: large;">Fecha de Caducidad</label><br>
                    <input type="date" name="fechaCaducidad" class="input" required>
                </div>
            </section>

            <section class="flexContainer">
                <div class="divContainer" style="width:100%; position: relative; color: black !important;">
                    <label class="input" style="padding:20px">
                        <input type="radio" name="tipoHeladera" value="Heladera Recomendada" class="botonHeladeraRecomendada" id="botonHeladeraRecomendada"> Heladera Recomendada
                    </label>

                    <label class="input" style="padding:20px">
                        <input type="radio" name="tipoHeladera" value="Heladera Nuestra" class="botonHeladeraNuestra" id="botonHeladeraNuestra"> Heladera Nuestra
                    </label>
                </div>
            </section>

            <section class="flexContainer">
                <div class="divContainer" style="width:100%">
                    <select name="heladeraDestinoRecomendada" class="input seleccionHeladeraRecomendada" style="width:100%" id="seleccionHeladeraRecomendada">
                        <option disabled selected>Heladera de Destino</option>
                        {{#each heladeras}}
                            <option>{{this.nombre}}</option>
                        {{/each}}
                    </select>
                </div>
            </section>

            <section class="flexContainer">
                <div class="divContainer" style="width:100%">
                    <select name="heladeraDestinoNuestra" class="input seleccionHeladeraNuestra" style="width:100%" id="seleccionHeladeraNuestra">
                        <option disabled selected>Heladera de Destino</option>
                        {{#each heladeras}}
                            <option>{{this.nombre}}</option>
                        {{/each}}
                    </select>
                </div>
            </section>

            <section class="flexContainer">
                <div class="divContainer" style="width:98%">
                    <input type="number" name="peso" class="input" required placeholder="Peso de la Vianda" style="width:100%" step="0.01">
                </div>
            </section>

            <section class="flexContainer">
                <div class="divContainer" style="width:98%">
                    <input type="number" name="calorias" class="input" required placeholder="CalorÃ­as de la Vianda" style="width:100%">
                </div>
            </section>

            <div class="centrar">
                <input type="submit" value="Continuar" class="enviar" id="colaboracionExitosaBoton">
            </div>
        </form>
    </main>
{{/partial}}
{{> templates/baseFondoBlanco }}
