{{#partial "titulo-y-descripcion"}}
    <title>Registro Persona Humana</title>
    <meta name="description" content="Registro Persona Humana">
{{/partial}}

{{#partial "css-extra"}}
    <link rel="stylesheet" type="text/css" href="../css/registroPersonaHumana.css">
{{/partial}}

{{#partial "titulo-h1"}}
    <h1 class="titulo" style="color: black !important;">Vamos a conocernos <br> poco m√°s</h1>
{{/partial}}

{{#partial "js-extra"}}
    <script type="text/javascript" src="/js/registroPersonaHumana.js"></script>
    <script type="text/javascript" src="/js/cargarImagen.js"></script>
    <script type="text/javascript" src="/js/contrasenia.js"></script>
{{/partial}}

{{#partial "contenido"}}
<main>
    <form method="POST" action="/personaHumana">
        <section class="flexContainer">
            <div class="divImagenCentrada">
                <img src="../img/Frame46.svg" alt="imagen-para-insertar-foto" id="imagen-para-foto" class="imagenCentrada" style="cursor: pointer;">
                <!-- <input type="file" id="input-foto" accept="image/*" style="display: none;"> -->
            </div>
        </section>

        <section class="flexContainer">
            <div class="divContainer" style="width:50%">
                <input type="text" name="nombre" class="input" required placeholder=" Nombre" style="width:100%" value="{{nombre}}">
            </div>
            <div class="divContainer" style="width:50%">
                <input type="text" name="apellido" class="input" required placeholder=" Apellido" style="width:100%" value="{{apellido}}">
            </div>
        </section>
        <section class="flexContainer">
            <div class="divContainer" style="width:20%">
                <label style="color: gray !important; font-size: large;">Documento</label>
                <select class="input" style="width:100%" name="tipoDocumento" min="0" max="99999999" step="0" required>
                    <option value="">Tipo</option>
                    <option value="DNI">DNI</option>
                    <option value="LC">LC</option>
                    <option value="LC">LE</option>
                    <option value="PASAPORTE">PASAPORTE</option>
                </select>
            </div>
            <div class="divContainer" style="width:80%">
                <label style="font-size: large;">Numero</label>
                <input type="number" class="input" required placeholder=" N√∫mero" style="width:100%" name="numeroDeDocumento" value="{{documento}}">
            </div>
        </section>
        <section class="flexContainer">
            <div class="divContainer" style="width:100%; position: relative;">
                <label style="color: gray !important; font-size: large;">Fecha de Nacimiento</label><br>
                <input type="date" class="input" name="fechaDeNacimiento" required value="{{nacimiento}}">
                <img src="../img/Calendar.svg" alt="icono-calendario" class="calendar-icon">
            </div>
        </section>

        <section class="flexContainer">
            <div class="divContainer" style="width:20%">
                <label style="color: gray !important; font-size: large;">Medio de Contacto</label>
                <select class="input" style="width:100%" name="tipoMedioDeContacto" id="tipoContacto" required>
                    <option value="">Tipo</option>
                    <option value="NUMERO_DE_TELEFONO">Telefono</option>
                    <option value="WHATSAPP">Whatsapp</option>
                    <option value="TELEGRAM">Telegram</option>
                    <option value="CORREO">Correo</option>
                </select>
            </div>
            <div class="divContainer" style="width:80%">
                <label style="font-size: large;">Contacto</label>
                <label style="font-size: large;">Contacto</label>
                <input type="text" name="contacto" class="input" required placeholder=" Contacto" style="width:100%" id="contacto" value="{{contacto}}">
            </div>
        </section>

        <section class="flexContainer">
            <div class="divContainer" style="width:33%">
                <label style="color: gray !important; font-size: large;">Domicilio</label>
                <input type="text" class="input" name="calle" id="calle" placeholder=" Calle" style="width:100%" value="{{calle}}">
            </div>
            <div class="divContainer" style="width:33%">
                <label style="font-size: large;">Altura</label>
                <input type="number" class="input" name="altura" id="altura" placeholder=" Altura" style="width:100%" value="{{altura}}">
            </div>
            <div class="divContainer" style="width:33%">
                <label style="font-size: large;">Codigo Postal</label>
                <input type="number" class="input" name="codigoPostal" id="codigoPostal" placeholder=" C√≥digo Postal" style="width:100%" value="{{codigoPostal}}">
            </div>
        </section>

        <section class="flexContainer">
            <div class="divContainer" style="width:33%">

                {{#if errorUsuario}}<label style="font-size: large; color: orange" id="msjUsuarioError">{{errorUsuario}}</label>
                {{else}}<label style="color: gray !important; font-size: large;">Nombre de usuario</label>{{/if}}
                <input type="text" class="input" id="usuario" placeholder=" Usuario" style="width:100%" name="usuario" required value="{{usuario}}">
            </div>
            <div class="divContainer" style="width:45%">
                    {{#if errorContra}}<label style="font-size: large; color: orange" id="msjContraError">{{errorContra}}</label>
                    {{else}}<label style="font-size: large;" id="msjContraError">__</label>{{/if}}
                <input type="password" class="input" id="contrasenia" placeholder=" Contrase√±a" style="width:100%" name="contrasenia" required value="{{contra}}">
                <button type="button" onclick="togglePassword()">üëÅÔ∏è</button>
            </div>
            <div class="divContainer" style="width:33%">
                <label style="font-size: large;">_</label>
                <input type="password" class="input" id="contraseniaRepetida" placeholder=" Repetir Contrase√±a" style="width:100%" name="contraseniaRepetida" required value="{{contraRepetida}}">
                <button type="button" onclick="togglePassword()">üëÅÔ∏è</button>
            </div>
        </section>

        <div class="centrar">
            <input type="submit" value="Registrar" class="enviar" id="registroExitosoBoton">
        </div>
    </form>
</main>
{{/partial}}

