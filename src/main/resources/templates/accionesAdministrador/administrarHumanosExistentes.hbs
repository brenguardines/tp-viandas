{{#partial "titulo-y-descripcion"}}
    <title>Administrar Colaboradores Humanos Existentes</title>
    <meta name="description" content="Administrar Colaboradores Humanos Existentes">
{{/partial}}

{{#partial "js-extra"}}
    <script type="text/javascript" src="/js/gestionHumana.js"></script>
{{/partial}}

{{#partial "contenido"}}
    <main>
        <h1 class="titulo">Administrar Colaboradores Humanos Existentes</h1> <br>
        <section class="flexContainer">
            <div class="divContainer" style="width:100%">
                <label style="color: gray !important; font-size: large;">Persona</label>
                <select class="input" style="width:100%" required>
                    {{#each personasHumanas}}
                        <option>{{this.nombreYApellido.nombre}} {{this.nombreYApellido.apellido}} - {{this.id}}</option>
                    {{/each}}
                </select>
                <br>
                <br>
                <input type="submit" value="Editar" class="boton-rojo" id="editarHumanoBoton">
                <input type="submit" value="Eliminar" class="boton-rojo" id="eliminarHumanoBoton">
            </div>
        </section>
    </main>
{{/partial}}
{{> templates/baseFondoBlancoSinMenu }}